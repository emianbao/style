@import nib

.page-container
	overflow: hidden
.page-aside
	position: relative
	float: left
	width: 200px
	padding-bottom: 3000px
	margin-bottom: -3000px
	background-color: #eee
	.logo
		display: block
		height: 50px
		background: #076E96 url(logo.png) no-repeat 10px 50%
		color: #fff
		font-size: 18px
		line-height: 50px
		padding-left: 80px
		&:hover
			text-decoration: none
	.main-menu
		margin-top: 10px
		padding-left: 20px
		font-size: 14px
		ul
			border-left: 1px dotted #287FA8
			margin-left: 4px
			padding-left: 16px
		a
			margin-left: -21px
			padding-left: 21px
			display: block
			height: 36px
			line-height: 36px
			margin-left: -10px
			padding: 0 10px
			border-radius: 2px 0 0 2px
			&:hover
				background-color: #ddd
		.current, .current:hover
			background-color: #fff
			color: #287FA8
			cursor: default
		.unfold:before, .fold:before
			float: left
			line-height: 36px
			margin-right: 5px
			font-size: 16px
			color: #076E96
		.unfold
			ul
				display: none
			&:before
				content: "+"
				font-size: 14px
		.fold
			&:before
				content: "-"
				font-size: 24px
.page-main
	margin-left: 200px
	.header
		position: relative
		height: 50px
		line-height: 50px
		background-color: #287FA8
		.user-info
			position: absolute
			top: 0
			right: 0
			.item
				float: left
				position: relative
				font-size: 14px
				height: 50px
				line-height: 50px
				padding: 0 10px
				color: #fff
				border-left: 1px solid #076E96
				&:hover
					background-color: #076E96
					text-decoration: none
			.btn
				text-align: center
				font-size: 20px
				min-width: 30px
				_width: 30px
			.count
				position: absolute
				top: 10px
				left: 25px
				background-color: #FF8D24
				color: #fff
				font-size: 12px
				line-height: 12px
				padding: 2px 5px 1px
				font-weight: bold
				border-radius: 2px
			.user img
				width: 40px
				height: 40px
				margin: 5px 10px 5px 0
				vertical-align: middle
				border-radius: 20px
	.body
		.breadcrumb
			padding: 0 10px
			margin: 10px 0
			line-height: 32px
			color: #eee
			a, span
				margin: 0 10px
			a
				color: #287FA8
				&:hover
					color: #076E96
			span
				color: #999
		.content
			margin: 0 20px 20px



