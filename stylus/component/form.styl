@import nib

.input
	border: 1px solid #ddd
	border-radius: 2px
.input-s
	height: 22px
	line-height: 22px
	padding: 0 4px
.input-m
	height: 34px
	line-height: 34px
	padding: 0 9px
.input-b
	height: 48px
	line-height: 48px
	padding: 0 14px
.input-group
	display: inline-block
	border: 1px solid #ddd
	border-radius: 2px
	overflow: hidden
	.left, input, .right
		float: left
	.left, .right
		background-color: #f6f6f6
		&:hover
			background-color: #eee
			text-decoration: none
	.left
		border-right: 1px solid #ddd
	.right
		border-left: 1px solid #ddd
	input
		border: none
.input-group-s
	.left, input, .right
		height: 24px
		line-height: 24px
		padding: 0 5px
		font-size: 12px
.input-group-m
	.left, input, .right
		height: 36px
		line-height: 36px
		padding: 0 10px
		font-size: 14px
.input-group-s
	.left, input, .right
		height: 50px
		line-height: 50px
		padding: 0 15px
		font-size: 18px