@import nib

$blue = #287FA8
$blue-highlight = #076E96
$orange = #FF8D24
$split-color = #eee
// 主要文字颜色
$font-color-primary = #333
// 次要文字颜色
$font-color-secondary = #999

html, body
	height: 100%
body
	font-family: Tahoma,sans-serif,Microsoft YaHei
body, a
	color: $font-color-primary
.page-container
	overflow: hidden
	min-height: 100%
.page-aside
	position: relative
	float: left
	width: 200px
	min-height: 100%
	padding-bottom: 3000px
	margin-bottom: -3000px
	background-color: #eee
	.logo
		display: block
		height: 50px
		background: $blue-highlight url(i/logo.png) no-repeat 10px 50%
		color: #fff
		font-size: 18px
		line-height: 50px
		padding-left: 80px
		&:hover
			text-decoration: none
	.main-menu
		margin-top: 10px
		padding-left: 20px
		font-size: 14px
		ul
			border-left: 1px dotted $blue
			margin-left: 4px
			padding-left: 16px
		// li
		// 	border-top: 1px solid #fff
		// 	border-bottom: 1px solid #ddd
		// 	&:first-child
		// 		border-top: none
		// 	&:last-child
		// 		border-bottom: none
		// 	li
		// 		border: none
		a
			margin-left: -21px
			padding-left: 21px
			display: block
			height: 36px
			line-height: 36px
			margin-left: -10px
			padding: 0 10px
			border-radius: 2px 0 0 2px
			&:hover
				background-color: #ddd
				text-decoration: none
		.current, .current:hover
			background-color: #fff
			color: $orange
			cursor: default
		.unfold:before, .fold:before
			float: left
			line-height: 36px
			margin-right: 5px
			font-size: 16px
			color: $blue-highlight
		.unfold
			ul
				display: none
			&:before
				content: "+"
				font-size: 14px
		.fold
			&:before
				content: "-"
				font-size: 24px
.page-main
	margin-left: 200px
	.header
		position: relative
		height: 50px
		line-height: 50px
		background-color: $blue
		.user-info
			position: absolute
			top: 0
			right: 0
			.item
				float: left
				position: relative
				font-size: 14px
				height: 50px
				line-height: 50px
				padding: 0 10px
				color: #fff
				border-left: 1px solid $blue-highlight
				&:hover
					background-color: $blue-highlight
					text-decoration: none
			.btn
				text-align: center
				font-size: 20px
				min-width: 30px
				_width: 30px
			.count
				position: absolute
				top: 10px
				left: 25px
				background-color: $orange
				color: #fff
				font-size: 12px
				line-height: 1
				padding: 0 5px 1px
				border-radius: 2px
			.user img
				width: 40px
				height: 40px
				margin: 5px 10px 5px 0
				vertical-align: middle
				border-radius: 20px
	.body
		.breadcrumb
			padding: 0 10px
			margin: 10px 0
			line-height: 32px
			color: $split-color
			a, span
				margin: 0 10px
			a
				color: $blue
				&:hover
					color: $blue-highlight
			span
				color: $font-color-secondary
		.content
			margin: 0 20px 20px



